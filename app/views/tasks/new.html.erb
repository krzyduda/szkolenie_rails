<h2>Dodaj zadanie</h2>
<% form_for :task,
     :url => {:controller => :tasks,
              :action => :create
             } do |f| %>
  <div><%= f.text_field :title %></div>
  <div><%= f.text_area :description %></div>
  <div><%= submit_tag "zapisz" %></div>
<% end %>

